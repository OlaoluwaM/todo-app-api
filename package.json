{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "tsc -p ./tsconfig.prod.json",
    "postbuild": "tsp ./dist",
    "prestart": "npm run build",
    "start": "node ./dist/server.js",
    "predev": "npm run compose:restart:db",
    "dev": "nodemon src/server.ts",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest",
    "test:setup": "npm run compose:restart:db && cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest",
    "test:single": " cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern --",
    "compose:up": "docker-compose up -d",
    "compose:up:force": "docker-compose up --force-recreate --build --remove-orphans --always-recreate-deps --renew-anon-volumes -d",
    "compose:up:db": "docker-compose up -d postgres",
    "compose:up:db:force": "docker-compose up --force-recreate --build --remove-orphans --always-recreate-deps --renew-anon-volumes -d postgres",
    "compose:down": "docker-compose down",
    "compose:down:force": "docker-compose down -v --rmi all --remove-orphans",
    "compose:restart": "npm run compose:down && npm run compose:up",
    "compose:restart:db": "npm run compose:down && npm run compose:up:db",
    "compose:restart:force": "npm run compose:down:force && npm run compose:up:force",
    "compose:restart:db:force": "npm run compose:down:force && npm run compose:up:db:force"
  },
  "keywords": [],
  "author": "Olaoluwa Mustapha <olaolum@pm.me> (https://www.github.com/OlaoluwaM)",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/eslint-config-prettier": "^6.11.0",
    "@types/hapi__hapi": "^20.0.12",
    "@types/jest": "^28.1.7",
    "@types/node": "^18.7.5",
    "@types/node-notifier": "^8.0.2",
    "@types/nodemon": "^1.19.2",
    "@types/pg": "^8.6.5",
    "@types/ramda": "^0.28.15",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.4.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.3",
    "jest": "^28.1.3",
    "node-notifier": "^10.0.1",
    "nodemon": "^2.0.19",
    "pg-to-ts": "^4.1.0",
    "prettier": "^2.7.1",
    "ts-import-patch": "^1.0.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@hapi/hapi": "^20.2.2",
    "dotenv": "^16.0.1",
    "fp-ts": "^2.12.2",
    "io-ts": "^2.2.17",
    "io-ts-types": "^0.5.16",
    "pg": "^8.7.3",
    "ramda": "^0.28.0",
    "uuid": "^8.3.2"
  }
}
